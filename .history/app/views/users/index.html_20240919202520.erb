<div>
    <div class="row">
    <% @users.each do |article| %>
       
        <div  class="col-12 col-md-6 col-lg-3 mb-4">
        <div class="card h-100 d-flex flex-column" style="width: 100%;">
        <div class="image-container">
        <% if @users.user_image.present? %>
        <div class="user-picture_box">
       <img src="<%= @user.user_image%>">
       </div>
        <% else %>
       <div class="user-avatar">
               <h5><%= @user.first_name[0].titlecase%><%= @user.last_name[0].titlecase%></h5>
       </div>
       <% end %>
        </div>
            <div class="card-body bg-info text-white">
                <div class="card-title">
                    <div>
                    <h5><%= link_to article.title, article_path(article), class: "text-white text-decoration-none" %></h5>
                    <p>by <%= article.user.first_name.titlecase %> <%= article.user.last_name.titlecase %>  </i> </p>                    
                    </div>
                </div>
                    <p class="card-text"><%= article.description %></p>
                <div class="text-end art_button">
                    <%= link_to "See Full Article", article_path(article), class: "btn btn-outline-light" %>
                </div>
            </div>
        </div>  
        </div>
       
    <% end %>
    </div>
</div>
