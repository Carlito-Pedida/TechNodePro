<div>
    <h3>Sign Up</h3>
    <div class="container">
        <%= form_with model: @user do |form| %>
            <div>
                <%= form.label :first_name %> <br/>
                <%= form.text_field :title, class: "form-control shadow rounded", placeholder: "first name"  %>
            </div> 
            <div>
                <%= form.label :last_name %> <br/>
                <%= form.text_field :last_name, class: "form-control shadow rounded", placeholder: "last name"  %>
            </div>
            <div>
                <%= form.label :email %> <br/>
                <%= form.email_field :email, class: "form-control shadow rounded", placeholder: "email"  %>
            </div>
            <div class="dflex row">
                <div  class="col-md-6">
                <%= form.label :username %> <br/>
                <%= form.text_field :username, class: "form-control shadow rounded", placeholder: "username"  %>
                </div>
                <div class="col-md-6">
                <%= form.label :password %> <br/>
                <%= form.password_field :password, class: "form-control shadow rounded", placeholder: "password"  %>
                </div>
            </div>
           
        
            <div class="my-3">
                <p>
                <%= form.submit  %>
                </p>
            </div>
           
        <% end %>
    </div>

</div>