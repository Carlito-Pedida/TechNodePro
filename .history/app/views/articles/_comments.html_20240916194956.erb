<div>
    <p>Comments</p>
    <% @article.comments.each do |comment| %>
        <% unless comment.archived? %>
            <div class="card">
                <p>
                    <strong>Name:</strong>
                    <%= comment.commenter %>
                </p>
                
                <p>
                    <strong>Comment:</strong>
                    <%= comment.body %>
                </p>

                <p>
                    <%= link_to "Remove Comment", [comment.article, comment], data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
                </p>
            </div>
            <hr/>
        <% end %>    
    <% end %>
</div>