<div>
    <div  class="container row justify-content-center article-form">
    <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-success rounded text-light  text-center") do |form| %>
        <%= render "shared/errors", obj: @article, class: "text-start" %>
            <h3>Create Article</h3>
       
            <div  class="form-group row my-1">
                <%= form.label :title, class: "shadow col-md-2 col-form-label" %>
                <div class=" col-md-10">
                <%= form.text_field :title, class: "form-control shadow rounded", placeholder: "Article Title"  %>
                </div>
            </div> 

            <div  class="form-group row my-1">
                <%= form.label :description, class: "shadow col-md-2 col-form-label" %>
                <div class=" col-md-10">
                <%= form.text_area :description, class: "form-control shadow rounded", placeholder: "Article Description"  %>
                </div>
            </div>

            <div  class="form-group row my-1">
                <%= form.label :body, class: "shadow col-md-2 col-form-label" %>
                <div class=" col-md-10">
                <%= form.text_area :body, class: "form-control shadow rounded", placeholder: "Article Body"  %>
                </div>
            </div>

            <div  class="form-group row my-1">
                <%= form.label :reference, class: "shadow col-md-2 col-form-label" %>
                <div class=" col-md-10">
                <%= form.text_area :reference, class: "form-control shadow rounded", placeholder: "Article References"  %>
                </div>
            </div>

            <div  class="form-group row my-1">
                <%= form.label :image_link, class: "shadow col-md-2 col-form-label" %>
                <div class=" col-md-10">
                <%= form.text_area :image_link, class: "form-control shadow rounded", placeholder: "Image_link (optional)"  %>
                </div>
            </div>

            <div  class="form-group row my-1">
                <p>
                    <%= form.label :set_status %>
                    <%= form.select :status, Visible::VALID_STATUSES, selected:  @article.status || "public" %>
                </p>
            </div>

            <br/>
            <div class="form-group text-center my-1">
                <%= form.submit class: "btn btn-outline-light btn-lg"  %>
            </div>
           
        <% end %>
    </div>

</div>