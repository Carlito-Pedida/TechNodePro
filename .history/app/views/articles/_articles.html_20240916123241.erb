<div>


        <%= @articles.each do |article| %>
            <div class="card">
                <div class="card header">
                    <h5><%= article.title.titlecase %></h5>
                    <p><%= article.description %></p>
                </div>
                <div class="card-body">
                    <p><%= article.body %></p>
                </div>
                <div class="card-footer">
                    <h5><%= article.reference %></h5>
                </div>
            </div>
       <% end %>


</div>