<div>
    <p>
        Our Blog has <%= Article.public_count %> articles and counting!
    </p>
    <% @articles.each do |article| %>
        <% unless article.archived? %>
        <div class="card" style="width: 18rem;">
        <img src="https://images.unsplash.com/photo-1607799279861-4dd421887fb3?w=700&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1yZWxhdGVkfDEzfHx8ZW58MHx8fHx" class="card-img-top" alt="...">
        <div class="card-body bg-info text-white">
            <div class="card-title">
                <div>
                <h5><%= link_to article.title.titlecase, article_path(article), class: "text-white text-decoration-none" %></h5>
                <p>by <%= article.user.first_name.titlecase %> <%= article.user.last_name.titlecase %>  </i> </p>                    
                </div>
            </div>
                <p class="card-text"><%= article.description %></p>
            <div class="text-end">
                <%= link_to "See Full Article", article_path(article), class: "btn btn-outline-light" %>
            </div>

        </div>
    </div> 
        <% end %>   
        
    <% end %>
</div>
