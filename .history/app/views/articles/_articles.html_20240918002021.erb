<div>
    <p>
        Our Blog has <%= Article.public_count %> articles and counting!
    </p>
    <div>
    <% @articles.each do |article| %>
        <% unless article.archived? %>
        <div class="card" style="width: 18rem;">
            <img src="<%= article.image_link || 'https://plus.unsplash.com/premium_photo-1681566925827-d1969127dd3d?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D' %>" class="card-img-top" alt="Article Image">
            <div class="card-body bg-info text-white">
                <div class="card-title">
                    <div>
                    <h5><%= link_to article.title.titlecase, article_path(article), class: "text-white text-decoration-none" %></h5>
                    <p>by <%= article.user.first_name.titlecase %> <%= article.user.last_name.titlecase %>  </i> </p>                    
                    </div>
                </div>
                    <p class="card-text"><%= article.description %></p>
                <div class="text-end">
                    <%= link_to "See Full Article", article_path(article), class: "btn btn-outline-light" %>
                </div>
            </div>
        </div>  
        <% end %>   
    <% end %>
    </div>
    
</div>
