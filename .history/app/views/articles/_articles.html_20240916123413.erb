<div>
        <%= @articles.each do |article| %>
            <div class="card">
                <div class="card header">
                    <h3><%= article.title.titlecase %></h3>
                    <p><%= article.description %></p>
                </div>
                <div class="card-body">
                    <p><%= article.body %></p>
                </div>
                <div class="card-footer">
                    <i>Ref: <%= article.reference %>...</i>
                </div>
            </div>
       <% end %>
</div>