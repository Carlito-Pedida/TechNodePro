<h4>Comments (<%= @article.comments.length %>)</h4>
<div class="comments">
  <% @article.comments.each do |comment| %>
    <div class="comment my-3">
    <% if @article.user.user_image.present? %>
    <div class="picture_box">
   <img src="<%= @article.user.user_image%>">
   </div>
    <% else %>
   <div class="avatar">
           <h5><%= @article.user.first_name[0].titlecase%><%= @article.user.last_name[0].titlecase%></h5>
   </div>
   <% end %>
      <p>Posted by: <%= comment.user.username %> <%= comment.body %></p>
      <% if logged_in? && (comment.user == current_user || current_user.admin? ) %>
    <%= link_to "Remove Comment", [comment.article, comment], data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>      <h3>Replies</h3>
    <% end %> 
    <ul>
        <% comment.replies.each do |reply| %>
          <li>
            <p><%= reply.reply_body %></p>
            <p>Reply by: <%= reply.user.username %></p>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>

