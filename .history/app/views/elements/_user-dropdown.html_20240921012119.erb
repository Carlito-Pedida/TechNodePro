<div class="btn-group">
<button type="button" class="btn btn-outline-light dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
    What would you like to do?
</button>
<ul class="dropdown-menu">
    <li><%= link_to "Create New Article", new_article_path, class: "dropdown-item" %></li>
     <% if @article.present? %>
    <li><%= link_to "Edit Article", edit_article_path(@article), class: "dropdown-item" %></li>
    <li><%= link_to "Delete Article", article_path(@article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "dropdown-item" %></li>
        <% end %>
    <li><hr class="dropdown-divider"></li>
    <li><%= link_to "Back to articles list", articles_path, class: "dropdown-item" %></li>
    <li><%= link_to "Blog", root_path, class: "dropdown-item" %></li>
    <li><%= link_to "Tech_Zone", root_path, class: "dropdown-item" %></li>
    <li><hr class="dropdown-divider"></li>
     <li><%= link_to "Delete my profile", user_path(current_user), data: {turbo_method: :delete, turbo_confirm: "WARNING! this operation can not be undone!"}, class: "dropdown-item text-danger" %></li>
    
     <% if logged_in? && current_user.admin? && !@user.admin%>
     <li><hr class="dropdown-divider"></li>
     <li><%= link_to "Delete THIS member", user_path(@user), data: {turbo_method: :delete, turbo_confirm: "WARNING! You are about to delete a contributor account.\nThis operation can NOT be undone!\nProceed?"}, class: "dropdown-item text-danger" %></li>
     <% end %>
</ul>
</div>