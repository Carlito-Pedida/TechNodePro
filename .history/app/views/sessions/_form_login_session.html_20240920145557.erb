<div>
    <div class="container row justify-content-center">
        <%= form_with(scope: :session, user:login_path, class: "shadow p-3 mb-3 bg-info rounded text-light  text-center") do |form| %>
                <h3>Log in</h3>
            <div class="form-group row">
                <%= form.label :email, class: "shadow col-md-2 col-form-label" %> <br/>
                <div class=" col-md-10">
                <%= form.email_field :email, class: "form-control shadow rounded", placeholder: "email"  %>
                </div>
            </div>
            <br/>
            <div class="form-group row">
                <%= form.label :password, class: "shadow col-md-2 col-form-label" %> <br/>
                <div class=" col-md-10">
                <%= form.password_field :password, class: "form-control shadow rounded", placeholder: "password"  %>
                </div>
            </div>
            <br/>
           
            <div class="form-group text-center">
                <%= form.submit "Log in"  class: "btn btn-outline-light btn-lg"  %>
            </div>
        <% end %>
    </div>
</div>